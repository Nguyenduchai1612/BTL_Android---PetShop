<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#80D8FF"
                android:endColor="#40C4FF"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#B3E5FC"
                android:endColor="#81D4FA"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
