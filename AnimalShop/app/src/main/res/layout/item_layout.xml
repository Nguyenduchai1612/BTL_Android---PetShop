<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemhome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/backgroud"
    android:padding="16dp"
    tools:layout_margin="4dp">

    <ImageView
        android:id="@+id/imgitem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/tvnameitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="cursive"
        android:text="Name"
        android:textColor="@color/color4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imgitem"
        app:layout_constraintStart_toStartOf="@+id/imgitem"
        app:layout_constraintTop_toBottomOf="@+id/imgitem" />

    <TextView
        android:id="@+id/tvpriceitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="price"
        android:textColor="@color/color3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imgitem"
        app:layout_constraintStart_toStartOf="@+id/imgitem"
        app:layout_constraintTop_toBottomOf="@+id/tvnameitem" />
</androidx.constraintlayout.widget.ConstraintLayout>